<style lang="scss">
    .f {
        width: 100vw;
        height: 17.5vh;
    }

    .h-2 {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .header {
        padding-bottom: 50px;
        width: 100vw;
        display: flex;
        background-color: #0e1329;
        flex-direction: column;
        align-items: center;
        height: 100vh;

        &__opac-container {
            width: 100vw;
            height: 90vh;
            position: absolute;
            z-index: 2;
            top: 0px;
            background-color: #131313;
            opacity: 0.3;
            display: flex;
            justify-content: center;
        }

        &__img {
            height: 90vh;
            width: 100vw;
            position: absolute;
            z-index: 1;
            top: 0px;
        }

        &__btc-coin {
            z-index: 1;
            position: absolute;
            width: 70vw;
            bottom: 0px;
            opacity: 1;
            // clip-path: inset(0 0 50% 0); /* Cortar la mitad inferior */
        }

        &__info-container {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100vw;
            height: 100vh;
            text-align: center;

            &__top {
                position: relative;
                z-index: 2;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100vw;
                height: 100vh;
                text-align: center;
            }

            &__title {
                text-align: center;
                font-size: clamp(10px, 3vw + 1rem, 61px);
                color: #fff;
                font-weight: 300;
                text-shadow: 0px 11px 3px #00000040;

                &--big {
                    color: #ffca0e;
                    font-family: "Poppins", sans-serif;
                    font-weight: 900;
                    font-size: clamp(60px, 5vw + 1rem, 133px);
                    text-shadow: 0px 11px 3px #00000040;
                }
            }

            &__btn-container {
                margin-top: 7vh;
                width: 33vw;
                display: flex;
                justify-content: space-between;
                flex-wrap: wrap;
                justify-content: center;
                margin-bottom: 50px;

                &__btn {
                    outline: none;
                    border: none;
                    width: 333px;
                    height: 81px;
                    border-radius: 39px;
                    font-family: "Poppins";
                    font-size: 23px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    font-weight: 600;
                    background: linear-gradient(
                        180deg,
                        #f1bc00 0%,
                        #ffffc5 100%
                    );
                    color: #44220c;

                    box-shadow:
                        0px 0px 39.97px 0px #ffffc5,
                        0px 0px 79.95px 0px #ffffc5,
                        0px 0px 279.82px 0px #ffffc5,
                        0px 0px 559.64px 0px #ffa724,
                        0px 0px 959.38px 0px #ffa724,
                        0px 0px 1678.91px 0px #ffa724;

                    transition: all 0.5s;

                    &:hover {
                        cursor: url("../../assets/pointer.png"), auto;
                        background-color: #fff;
                        color: #000;
                        box-shadow:
                            0px 0px 998.42px 1px #fff,
                            0px 0px 570.53px 1px #fff,
                            0px 0px 332.81px 1px #fff,
                            0px 0px 166.4px 1px #fff,
                            0px 0px 47.54px 1px #fff,
                            0px 0px 23.77px 1px #fff;
                        transform: scale(1.1);
                    }

                    &__link{
                        color: #44220c;


                    }
                }
            }

            &__txt {
                font-family: "Outfit", sans-serif;
                color: #ffffff;
                position: absolute;
                bottom: 10px;
                font-size: 20px;
            }
        }

        &__statics-container {
            position: absolute;
            z-index: 2;
            display: flex;
            justify-content: space-around;
            align-items: center;
            align-self: center;
            width: 85vw;
            bottom: 0px;
        }
    }

    @media only screen and (max-width: 900px) {
        .header {
            &__btc-coin {
                display: none;
            }

            &__info-container {
                margin: 0;
                width: 100vw;
                justify-content: center;
                align-items: center;

                &__title {
                    font-size: 5vh;
                    text-align: center;
                }

                &__btn-container {
                    height: 25vh;
                    width: 70vw;
                    margin-bottom: 70px;

                    justify-content: center;

                    &__btn {
                        width: 250px;
                        font-size: 20px;
                        background: linear-gradient(
                            180deg,
                            #f1bc00 0%,
                            #ffffc5 100%
                        );
                        color: #44220c;

                        -webkit-box-shadow: 0px 0px 63px 16px
                            rgba(212, 187, 41, 0.46);
                        -moz-box-shadow: 0px 0px 63px 16px
                            rgba(212, 187, 41, 0.46);
                        box-shadow: 0px 0px 63px 16px rgba(212, 187, 41, 0.46);

                        transition: all 0.5s;

                        &:hover {
                            cursor: none;
                            background-color: #fff;
                            color: #000;
                            -webkit-box-shadow: 0px 0px 63px 16px #fff;
                            -moz-box-shadow: 0px 0px 63px 16px #fff;
                            box-shadow: 0px 0px 63px 16px #fff;
                            transform: scale(1.1);
                        }
                    }
                }
            }

            &__statics-container {
                border-radius: 20px;
                margin: 40px;
            }
        }
    }
</style>


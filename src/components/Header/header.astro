---
import Nav from "./Nav.astro";
import GradientBtn from "../gradientBtn.astro";
import GradientBtnWB from "../gradientBtnWB.astro";
import InfoBtn from "../infoBtn.astro";
import StaticsContainer from "./staticsContainer.astro";
---

<header class="header" id="header">
    <div class="header__opac-container">
        <img src="/bg-img.png" alt="Mineria BTC" class="header__img" />
        <img src="/btc-coin.png" alt="Mineria BTC" class="header__btc-coin" />
    </div>
    <div class="f">
        <Nav />
    </div>
    <div class="h-2">
        <div class="header__info-container">
            <div class="header__info-container__top">
                <h1 class="header__info-container__title">
                    <span class="header__info-container__title--big"
                        >MINAR BITCOIN</span
                    >
                    <br /> TU fortuna, TU futuro
                </h1>
                <div class="header__info-container__btn-container">
                    <a
                        href="#s5"
                        class="header__info-container__btn-container__btn"
                        >Ãšnete a nosotros</a
                    >
                </div>
            </div>
            <div class="header__statics-container">
                <StaticsContainer num="" txt="" id="card-3" />
                <p class="header__info-container__txt">Inversores Cripto</p>
            </div>
        </div>
    </div>
</header>


---
import Img1 from "../../assets/section2_img1.jpg";
import InfoCard from "./infoCard.astro";
---

<article class="article">
    <div class="article__title-container">
        <h1 class="article__title-container__title">Somos los <span class="article__title-container__title__gradient-txt">mejores</span></h1>
        <p class="article__title-container__subtitle">¿Por qué? Nos diferenciamos de los demás</p>
    </div>
        <div class="article__content-c">
            <div class="article__card-container">
                <InfoCard icon="fa-gear" bTxt="Maquinaria y mineria de última generación." txt="Lideramos la industria al utilizar tecnologías energéticamentes eficientes garantizando una mineria de Bitcoin respetuosa con el medio ambiente"></InfoCard>
                <InfoCard icon="fa-shield" bTxt="Seguridad de Vanguardia." txt="Implementamos medidas de seguridad de última generación para proteger activos y la red blockchain"></InfoCard>
                <InfoCard icon="fa-eye" bTxt="Tecnología de eficiencia energética" txt="Lideramos la industria al utilizar tecnologías de ultima generación y energéticamentes eficientes"></InfoCard>
            </div>
            <div class="article__img-container">
                <img src={Img1.src} alt="MineBest" class="article__img">
            </div>
        </div>
</article>

<style lang="scss">
    .article{
        margin-left: 60px;
        width: 100vw;

        &__title-container{

            &__title{
                color: #fff;
                width: 90vw;
                font-size: clamp(35px,3.5vw + 1vh,80px);

                &__gradient-txt{
                    background: rgb(251,211,252);
                    background: linear-gradient(87deg, rgba(251,211,252,1) 0%, rgba(189,44,241,1) 100%);
                    -webkit-text-fill-color: transparent;
                    -webkit-background-clip: text;
                }
            }

            &__subtitle{
                margin-top: 2.5vh;
                color: #afafaf;
            }
        }

        &__content-c{
            margin-top: 5vh;
            width: 90vw;
            height: fit-content;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        &__img{
            position: relative;
            right: -17vh;
            width: 47vw;
            height: 400px;
            object-fit: cover;
            border-radius: 20px;
        }
    }

    @media only screen and (max-width: 480px){
        .article{
            margin: 0;

            &__title-container{
                margin-left: 20px;
            }

            &__content-c{
                width: 100vw;
                flex-direction: column;
            }

            &__card-container{
                width: 100vw;
                height: fit-content;
                display: flex;
                justify-content: center;
                flex-wrap: wrap;
            }

            &__img-container{
                width: 100vw;
                overflow: hidden;
            }

            &__img{
                margin-top: 30px;
                width: 130vw;
                right: -20px;
            }
        }
    }
</style>

<script is:inline>
    const infoCardArr = document.querySelectorAll('.info-card');
    const imgSources = ["https://cdn.discordapp.com/attachments/973568724722389052/1189352548189098044/pexels-muhammed-ensar-10725897.jpg?ex=66361f20&is=6634cda0&hm=e1f13d87eaac4ed69f247b28f4e65f35f58fb688e0e7c3ec0c0f8cac8d23f38e&", 
                        "https://cdn.discordapp.com/attachments/973568724722389052/1189353789317206066/pexels-manuel-geissinger-325229.jpg?ex=66362048&is=6634cec8&hm=b9283151c51184757e10fee94ea394b39cd2e0ba46ec6e1fc8288776ac0680a8&",
                        "https://cdn.discordapp.com/attachments/973568724722389052/1189354066837520524/pexels-panumas-nikhomkhai-1148820.jpg?ex=6636208a&is=6634cf0a&hm=0bffe551fe92dfad8cffe1b76826a8ad550e920a29f658a15649e1b92f166fa8&"];
    const changeImage = document.querySelector('.article__img');
    for (let i = 0; i < infoCardArr.length; i++){
        infoCardArr[i].addEventListener('mouseover', () =>{
            changeImage.src = imgSources[i];
            infoCardArr[i].style.backgroundColor = "rgba(255, 255, 255, 0.11)";
        })
        infoCardArr[i].addEventListener('mouseleave', () =>{
            changeImage.src = imgSources[i];
            infoCardArr[i].style.backgroundColor = "transparent";
        })
    }
    console.log(infoCardArr);
</script>
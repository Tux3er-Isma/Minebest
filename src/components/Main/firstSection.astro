---
import Img1 from "../../assets/section1_img1.png";
import Img2 from "../../assets/section1_img2.png";
import Img3 from "../../assets/section1_img3.png";
import Card from "./card.astro";
---

<article class="article">
    <h1 class="article__title">Descubre por qu√© <br class="br-m">minar <br class="br-d"><span class="article__title__btc">Bitcoin</span></h1>
    <div class="article__card-container">
        <Card source={Img1.src} txt="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Fugit assumenda officiis quasi sint perspiciatis laboriosam impedit tempore possimus amet corporis?" other="card-1" size="sm" id="card-1"></Card>
        <Card source={Img2.src} txt="Lorem ipsum dolor, sit amet consectetur adipisicing elit. Cumque veritatis rerum repellat autem illo natus accusantium molestiae, vero corrupti, omnis blanditiis error." size="md" id="card-2"></Card>
        <Card source={Img3.src} txt="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Fugit assumenda officiis quasi sint perspiciatis laboriosam impedit tempore possimus amet corporis?" size="lg" id="card-3"></Card>
    </div>
</article>


<style lang="scss">
    .article{
        margin-top: 10vh;
        margin-left: 60px;
        width: 100vw;
        color: #fff;

        &__title{
            width: 90vw;
            color: #fff;
            font-size: clamp(35px,3.5vw + 1vh,80px);

            &__btc{
                background: rgb(235,103,63);
                background: linear-gradient(90deg, rgba(235,103,63,1) 0%, rgba(252,176,69,1) 100%);
                -webkit-text-fill-color: transparent;
                -webkit-background-clip: text;
            }
        }

        &__card-container{
            margin-top: 150px;
            width: 90vw;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    }

    @media only screen and (max-width: 480px){
        .article{
            margin-left: 0;

            &__title{
                text-align: center;
                width: 90vw;
                margin-left: 20px;
            }

            &__card-container{
                margin-top: 50px;
                width: 100vw;
                flex-direction: column;
                justify-content: center;
            }
        }

        .br-d{
            display: none;
        }
    }

    .br-m{
        display: none;
    }
</style>

<script is:inline>
    const handleMove = e =>{
        const { currentTarget: target } = e;

    const rect = target.getBoundingClientRect(),
    x = e.clientX - rect.left,
    y = e.clientY - rect.top;

    target.style.setProperty("--mouse-x", `${x}px`);
    target.style.setProperty("--mouse-y", `${y}px`);
}
    for (const card of document.querySelectorAll('.c')) {
        card.onmousemove = e => handleMove(e);
    }
</script>
---
import Img1 from "../../assets/section1_img1.png";
import Img2 from "../../assets/section1_img2.png";
import Img3 from "../../assets/section1_img3.png";
import Card from "./card.astro";
---

<article class="article">
    <h1 class="article__title">
        Descubre por qué <br class="br-m" />minar <br class="br-d" /><span
            class="article__title__btc">BITCOIN</span>
    </h1>
    <div id="particles-js"></div>
    <div class="article__card-container">
        <Card
            source={Img1.src}
            title="Genera y Acumula BTC Diariamente"
            txtWhite="Estrategia de Seguridad Financiera: "
            txt="Asegúrate una base sólida y constante de ingresos en el mundo digital."
            other="card-1"
            size="sm"
            id="card-1"
        />
        <Card
            source={Img2.src}
            title="Alta Rentabilidad"
            txtWhite="Potencial de Crecimiento: "
            txt="Con el aumento constante del valor de Bitcoin, la minería se presenta como una de las inversiones más rentables y prometedoras."
            size="md"
            id="card-2"
        />
        <Card
            source={Img3.src}
            title="Diversificación de Inversiones"
            txtWhite="Amplía tu Portafolio: "
            txt="La minería de Bitcoin es una excelente manera de diversificar tu portafolio de inversiones."
            size="lg"
            id="card-3"
        />
    </div>
</article>
<!-- <img src="../../../public/btc-coin.png" alt="Bitcoin" class="article__img-btc"> -->

<style lang="scss">
    .article {
        position: relative;
        z-index: 2;
        margin-top: 10vh;
        width: 100vw;
        color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;

        &__title {
            width: 85vw;
            color: #fff;
            font-weight: 900;
            margin-bottom: 50px;
            font-size: clamp(35px,3.5vw + 1vh,80px);

            &__btc {
                background: rgb(235, 103, 63);
                background: linear-gradient(
                    90deg,
                    rgba(235, 103, 63, 1) 0%,
                    rgba(252, 176, 69, 1) 100%
                );
                -webkit-text-fill-color: transparent;
                -webkit-background-clip: text;
                font-size: clamp(35px,3.5vw + 1vh,80px);
            }
        }

        &__card-container {
            width: 85vw;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 40px;
        }

        &__img-btc {
            position: absolute;
            right: 0px;
            width: 50vw;
            opacity: 0.63;
            z-index: 1;
        }
    }

    @media only screen and (max-width: 480px) {
        .article {
            margin-left: 0;

            &__title {
                text-align: center;
                width: 90vw;
                margin-left: 20px;
                margin-bottom: 50px
            }

            &__card-container {
                margin-top: 0px;
                width: 85vw;
                display: flex;
                flex-direction: column;
            }
        }

        .br-d {
            display: none;
        }
    }

    @media only screen and (min-width: 481px) and (max-width: 900px){
        .article {
            margin-left: 0;

            &__title {
                text-align: center;
                width: 90vw;
                margin-left: 20px;
                margin-bottom: 100px
            }

            &__card-container {
                gap: 150px;
                margin-top: 0px;
                width: 85vw;
                display: flex;
                flex-direction: column;
            }
        }

        .br-d {
            display: none;
        }
    }

    @media only screen and (min-width: 1600px){
        .article{

            &__title{
                margin-bottom: 150px;
            }
        }
    }

    .br-m {
        display: none;
    }
</style>

<script is:inline>
    const handleMove = (e) => {
        const { currentTarget: target } = e;

        const rect = target.getBoundingClientRect(),
            x = e.clientX - rect.left,
            y = e.clientY - rect.top;

        target.style.setProperty("--mouse-x", `${x}px`);
        target.style.setProperty("--mouse-y", `${y}px`);
    };
    for (const card of document.querySelectorAll(".card-container-s")) {
        card.onmousemove = (e) => handleMove(e);
    }
</script>

---
const { source, txtWhite, txt, title, other, size = "sm", id } = Astro.props;
---

<div class="card-container-s">
    <div class:list={["card", other]} data-size={size}>
        <div class="card__info-container" data-size={size} tabindex="0">
            <img src={source} alt="Minebest" class="card__info-container__img">
            <h2 class="card__info-container__title">{title}</h2>
            <p class="card__info-container__txt"> <span class="card__info-container__txt--white">{txtWhite}</span> {txt}</p>
        </div>
    </div>
</div>

<style lang="scss">
    .card-container-s{
        background: rgba(190, 190, 190, 0.12);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(190, 190, 190, 0.33);
        width: 350px;
        height: 350px;
        border-radius: 30px;
        display: flex;
        align-items: center;

        &:hover{
            cursor: none;
        }

        &::before {
            background: radial-gradient(
                800px circle at var(--mouse-x) var(--mouse-y),
                rgba(255, 255, 255, 0.06),
                transparent 40%
            );
            border-radius: inherit;
            content: "";
            left: 0px;
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 2;
        }
    }

    .card__info-container{
        margin-left: 20px;

        &__img{
            width: 100px;
        }

        &__title{
            color: #FFE602;
            font-family: 'Poppins';
            font-size: 30px;
            font-weight: 900;
        }

        &__txt{
            font-size: 18px;
            color: #848484;
            font-weight: 300;

            &--white{
                color: #fff;
                font-weight: 500;
            }
        }
    }

    @media only screen and (min-width: 1600px){
        .card-container-s{
            width: 555px;
            height: 525px;
        }

        .card__info-container{
            margin-left: 50px;
            gap: 10px;
            height: 525px;
            width: 350px;
            display: flex;
            flex-direction: column;
            justify-content: center;

            &__img{
                width: 150px;
                height: 150px;
                margin-bottom: 50px;
            }
        }
    }
</style>
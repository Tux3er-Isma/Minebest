---
const { source, txtWhite, txt, title, other, size = "sm", id } = Astro.props;
---

<div class="card-container-s">
    <div class:list={["card", other]} data-size={size}>
        <div class="card__info-container" data-size={size} tabindex="0">
            <img src={source} alt="Minebest" class="card__info-container__img">
            <h2 class="card__info-container__title">{title}</h2>
            <p class="card__info-container__txt"> <span class="card__info-container__txt--white">{txtWhite}</span> {txt}</p>
        </div>
    </div>
</div>


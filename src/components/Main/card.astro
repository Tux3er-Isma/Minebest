---
const { source, txt, other, size = "sm", id } = Astro.props;
---

<div class="card-container-s">
    <div class:list={['card', other]} data-size={size}>
        <div class="card__info-container" data-size={size} tabindex="0">
            <div class="front c">
                <img src={source} alt="MineBest" class="card__img">
            </div>
            <div class="back c">
                <h2 class="card__title">Opción 1</h2>
                <p class="card__txt">{txt}</p>
            </div>
        </div>
    </div>
    <h2 class="card-container-s__title">Opción 1</h2>
</div>

<style lang="scss">
    .front, .back{
        position: absolute;
        widows: 100%;
        height: 100%;
        backface-visibility: hidden;
        transition: all 1s;
        background-color: rgba(255, 255, 255, 0.02);
        width: 250px;
        height: 250px;
        border-radius: 30px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: center;
        align-items: center;

        &:hover{
            cursor: pointer;
        }

        &::before{
            background: radial-gradient(
                800px circle at var(--mouse-x) var(--mouse-y),
                rgba(255, 255, 255, 0.06),
                transparent 40%
            );
            border-radius: inherit;
            content: "";
            left: 0px;
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 2;
        }
    }

    .front{
        display: flex;
        justify-content: center;
        align-items: center;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .back{
        flex-direction: column;
        justify-content: space-evenly;
        transform: perspective(500px) rotateY(180deg);
    }

    .card-container-s{
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;

        &__title{
            margin-top: 65%;
        }
    }

    .card{
        border-radius: 20px;
        display: flex;
        width: 20vw;
        align-items: center;
        justify-content: center;


        &__info-container{
            padding-top: 30px;
            display: flex;
            justify-content: center;
            width: 20vw;
            align-items: center;
            transition: 1s;

            &:focus .front{
                transform: perspective(500px) rotateY(180deg);
            }

            &:focus .back{
                transform: perspective(500px) rotateY(360deg);
            }
        }

        &__img{
            width: 50%;
            height: auto;
            border-radius: 30px;
        }

        &__txt{
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 30px;
            width: 80%;
            // height: 200px;
        }
    }

    @media only screen and (max-width: 480px){
        .card{
            margin-top: 150px; 
            width: 60vw;

            &__info-container{
                width: 100%;
            }

            &__img{
                border-radius: 10px;
            }
        }
    }
</style>